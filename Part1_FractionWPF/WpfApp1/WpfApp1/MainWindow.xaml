<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Работа с дробями" Height="450" Width="600"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Заголовок -->
        <Label Grid.Row="0" Grid.ColumnSpan="2" Content="Работа с правильной дробью" 
               FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"
               HorizontalContentAlignment="Center"/>

        <!-- Ввод числителя -->
        <Label Grid.Row="1" Grid.Column="0" Content="Числитель:" 
               VerticalAlignment="Center" Margin="0,0,10,10" VerticalContentAlignment="Center"/>
        <TextBox x:Name="NumeratorTextBox" Grid.Row="1" Grid.Column="1" 
                 Height="25" Margin="0,0,0,10" 
                 PreviewTextInput="NumeratorTextBox_PreviewTextInput"
                 PreviewKeyDown="TextBox_PreviewKeyDown"/>

        <!-- Ввод знаменателя -->
        <Label Grid.Row="2" Grid.Column="0" Content="Знаменатель:" 
               VerticalAlignment="Center" Margin="0,0,10,10" VerticalContentAlignment="Center"/>
        <TextBox x:Name="DenominatorTextBox" Grid.Row="2" Grid.Column="1" 
                 Height="25" Margin="0,0,0,10" 
                 PreviewTextInput="DenominatorTextBox_PreviewTextInput"
                 PreviewKeyDown="TextBox_PreviewKeyDown"/>

        <!-- Кнопки действий -->
        <StackPanel Grid.Row="3" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20">
            <Button x:Name="ProcentButton" Content="Вычислить проценты" 
                    Width="180" Height="35" Margin="10" Click="ProcentButton_Click"
                    Background="LightBlue" FontWeight="Bold"/>
            <Button x:Name="DigitSumButton" Content="Сумма цифр знаменателя" 
                    Width="180" Height="35" Margin="10" Click="DigitSumButton_Click"
                    Background="LightGreen" FontWeight="Bold"/>
        </StackPanel>

        <!-- Результаты -->
        <Label Grid.Row="4" Grid.ColumnSpan="2" Content="Результаты:" 
               FontWeight="Bold" Margin="0,20,0,10" FontSize="14"/>

        <Border Grid.Row="5" Grid.ColumnSpan="2" Background="LightYellow" BorderBrush="Gray" BorderThickness="1" CornerRadius="5">
            <TextBlock x:Name="ResultTextBlock" Margin="10" TextWrapping="Wrap" FontSize="12"/>
        </Border>

        <!-- Статус -->
        <Label x:Name="StatusTextBlock" Grid.Row="6" Grid.ColumnSpan="2" 
               Foreground="Gray" FontStyle="Italic" Margin="0,10,0,0"
               Content="Готов к работе. Введите значения числителя и знаменателя."/>
    </Grid>
</Window>