<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Работа с дробями" Height="500" Width="650"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Стили для кнопок -->
        <Style x:Key="GradientButtonStyle" TargetType="Button">
            <Setter Property="FontFamily" Value="Verdana"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Width" Value="180"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для текстовых блоков -->
        <Style x:Key="HeaderTextStyle" TargetType="Label">
            <Setter Property="FontFamily" Value="Verdana"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>

        <!-- Стиль для меток -->
        <Style x:Key="LabelStyle" TargetType="Label">
            <Setter Property="FontFamily" Value="Verdana"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#34495E"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- Стиль для текстовых полей -->
        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="FontFamily" Value="Verdana"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

        <!-- Кисти -->
        <LinearGradientBrush x:Key="MainBackgroundBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#ECF0F1" Offset="0"/>
            <GradientStop Color="#BDC3C7" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="BlueButtonBrush" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#3498DB" Offset="0"/>
            <GradientStop Color="#2980B9" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="GreenButtonBrush" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#2ECC71" Offset="0"/>
            <GradientStop Color="#27AE60" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="ResultBackgroundBrush" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#FFF9E6" Offset="0"/>
            <GradientStop Color="#FFEAA7" Offset="0.5"/>
            <GradientStop Color="#FFF9E6" Offset="1"/>
        </LinearGradientBrush>

        <RadialGradientBrush x:Key="TitleBackgroundBrush" Center="0.5,0.5" GradientOrigin="0.5,0.5" RadiusX="0.8" RadiusY="0.8">
            <GradientStop Color="#2C3E50" Offset="0"/>
            <GradientStop Color="#34495E" Offset="0.7"/>
            <GradientStop Color="#2C3E50" Offset="1"/>
        </RadialGradientBrush>
    </Window.Resources>

    <Grid Margin="20" Background="{StaticResource MainBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Заголовок с RadialGradientBrush -->
        <Border Grid.Row="0" Grid.ColumnSpan="2" 
                Background="{StaticResource TitleBackgroundBrush}" 
                CornerRadius="10" 
                Margin="0,0,0,20" 
                Padding="15,10">
            <Label Content="Работа с правильной дробью" 
                   Style="{StaticResource HeaderTextStyle}"
                   Foreground="White"
                   FontSize="16"/>
        </Border>

        <!-- Ввод числителя -->
        <Label Grid.Row="1" Grid.Column="0" 
               Content="Числитель:" 
               Style="{StaticResource LabelStyle}"
               Margin="0,0,10,10"/>

        <TextBox x:Name="NumeratorTextBox" 
                 Grid.Row="1" Grid.Column="1" 
                 Style="{StaticResource TextBoxStyle}"
                 Margin="0,0,0,10" 
                 PreviewTextInput="NumeratorTextBox_PreviewTextInput"
                 PreviewKeyDown="TextBox_PreviewKeyDown"
                 ToolTip="Введите целое неотрицательное число">
            <TextBox.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="White" Offset="0"/>
                    <GradientStop Color="#ECF0F1" Offset="1"/>
                </LinearGradientBrush>
            </TextBox.Background>
        </TextBox>

        <!-- Ввод знаменателя -->
        <Label Grid.Row="2" Grid.Column="0" 
               Content="Знаменатель:" 
               Style="{StaticResource LabelStyle}"
               Margin="0,0,10,10"/>

        <TextBox x:Name="DenominatorTextBox" 
                 Grid.Row="2" Grid.Column="1" 
                 Style="{StaticResource TextBoxStyle}"
                 Margin="0,0,0,10" 
                 PreviewTextInput="DenominatorTextBox_PreviewTextInput"
                 PreviewKeyDown="TextBox_PreviewKeyDown"
                 ToolTip="Введите целое положительное число">
            <TextBox.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="White" Offset="0"/>
                    <GradientStop Color="#ECF0F1" Offset="1"/>
                </LinearGradientBrush>
            </TextBox.Background>
        </TextBox>

        <!-- Кнопки действий с градиентными кистями -->
        <StackPanel Grid.Row="3" Grid.ColumnSpan="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Margin="0,20">
            <Button x:Name="PercentageButton" 
                    Content="Вычислить проценты" 
                    Style="{StaticResource GradientButtonStyle}"
                    Background="{StaticResource BlueButtonBrush}"
                    Click="PercentageButton_Click"/>

            <Button x:Name="DigitSumButton" 
                    Content="Сумма цифр знаменателя" 
                    Style="{StaticResource GradientButtonStyle}"
                    Background="{StaticResource GreenButtonBrush}"
                    Click="DigitSumButton_Click"/>
        </StackPanel>

        <!-- Результаты -->
        <Label Grid.Row="4" Grid.ColumnSpan="2" 
               Content="Результаты:" 
               Style="{StaticResource HeaderTextStyle}"
               Margin="0,20,0,10"/>

        <!-- Область результатов с градиентным фоном -->
        <Border Grid.Row="5" Grid.ColumnSpan="2" 
                Background="{StaticResource ResultBackgroundBrush}" 
                BorderBrush="#F1C40F" 
                BorderThickness="2" 
                CornerRadius="8"
                Margin="0,0,0,10">
            <TextBlock x:Name="ResultTextBlock" 
                       Margin="15" 
                       TextWrapping="Wrap" 
                       FontSize="12"
                       FontFamily="Verdana"
                       Foreground="#2C3E50"/>
        </Border>

        <!-- Статус -->
        <Label x:Name="StatusTextBlock" 
               Grid.Row="6" Grid.ColumnSpan="2" 
               Foreground="#7F8C8D" 
               FontStyle="Italic" 
               Margin="0,10,0,0"
               FontFamily="Verdana"
               FontSize="10"
               Content="Готов к работе. Введите значения числителя и знаменателя."/>
    </Grid>
</Window>